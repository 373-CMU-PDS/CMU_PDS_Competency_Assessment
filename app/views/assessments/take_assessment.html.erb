<h1 class="pds-blue-color">Take the assessment</h1>
<%= form_tag(take_assessment_path, method: :get) do %>
    <% position = 1 %>
    <% @questions.each do |question| %>
        <div class="row" style="display: none;" id=<%= "question" << position.to_s %>>
            <div class="col-xs-12">
                <%= render 'question_form', {question: question, position: position} %>
            </div>
        </div>
        <% position = position + 1 %>
    <% end %>
    <%= submit_tag "Next", :name => nil, :class => "btn btn-default btn-xs pds-color-background-light white-text" %>
<% end %>

<script type="text/javascript">
    position = 1;
    var nextPage = function() {
        old_q = "question" + position;
        position++;
        new_q = "question" + position;
        $("#" + old_q).hide();
        $("#" + new_q).show();
    }
    $(function() {
        $("#question1").show();
    })
</script>