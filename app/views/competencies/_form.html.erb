<div class="row">
  <div class="col-xs-3">
    <h2 class="pds-color-font">Create a Competency</h2>
  </div>
  <div class="col-xs-9">
    <%= simple_nested_form_for @competency, :html => { :class => 'form-inline' } do |f| %>
      <div class="form-group">
        <%= f.input :name, :class => "control-label" %>
      </div>
      <div class="form-group">
        <%= f.submit nil, :class => 'btn btn-xs pds-color-background-light white-text' %>
      </div>
    <% end %>
  </div>
</div>