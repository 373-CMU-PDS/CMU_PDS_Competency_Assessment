  <%= simple_nested_form_for @indicator, :html => { :class => 'form-horizontal' } do |indicator_form| %>
    <div class="row">
      <div class="span7">
        <fieldset>
          <legend><%= controller.action_name.capitalize %> indicator</legend>
          <%= render :partial => "indicator_fields", :locals => { :f => indicator_form } %>
        </fieldset>
      </div>

    <div class="span5">
      <legend>indicator_resources for this indicator</legend>
        <div id="indicator_indicator_resources">
          <%= indicator_form.simple_fields_for :indicator_resources do |indicator_resource_form| %>
            <%= render :partial => "indicator_resource_fields", :locals => { :f => indicator_resource_form } %>
          <% end %> 
          <p>
            <br /><%= indicator_form.link_to_add("Add Relationship", :indicator_resources, :class => 'button tiny') %>
          </p>
        </div> 
      </div>
    </div>
    <div class="form-actions">
      <%= indicator_form.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', indicators_path, :class => 'button secondary' %>
    </div>
  <% end %>