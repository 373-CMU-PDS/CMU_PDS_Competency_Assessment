<!--
This partial handles adding a new question to a competency. Its a form for a new
indicator question.
-->

<h2 class="pds-color-font">Add New Question</h2>
<%= simple_form_for @indicator_question, url: new_question_path, method: :put do |f| %>
    <div class="row">
        <div class="form-group col-xs-5">
          <%= f.label :question %>
          <%= f.text_field :question, :class => "form-control" %>
        </div>
        <div class="form-group col-xs-5">
          <%= f.label :indicator %>
          <%= f.collection_select :indicator, @indicators, :id, :description, {prompt: "Select indicator..."}, {:class => "form-control"} %>
        </div>
        <div class="col-xs-2">
            <%= f.submit "Add Question", class: "btn btn-default pds-color-background-light white-text" %>
        </div>
    </div>
<% end %>